# Database Configuration
DATABASE_URL=your_supabase_database_url
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://meetingguard-backend.onrender.com/oauth/callback

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Email Configuration (for meeting invitations)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_SERVICE=gmail

# Stripe Checkout Links (No API keys needed!)
# Create these links in your Stripe Dashboard > Payment Links
STRIPE_PRO_MONTHLY_LINK=https://buy.stripe.com/test_your_pro_monthly_link
STRIPE_PRO_YEARLY_LINK=https://buy.stripe.com/test_your_pro_yearly_link
STRIPE_PREMIUM_MONTHLY_LINK=https://buy.stripe.com/test_your_premium_monthly_link
STRIPE_PREMIUM_YEARLY_LINK=https://buy.stripe.com/test_your_premium_yearly_link

# Frontend URLs
FRONTEND_URL=https://meetingguard-ai.vercel.app
BACKEND_URL=https://meetingguard-backend.onrender.com

# Server Configuration
PORT=3000
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
